    pod 'PureLayout'
    pod 'Charts'


  # Pods for paymon

  target 'paymonTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'paymonUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
